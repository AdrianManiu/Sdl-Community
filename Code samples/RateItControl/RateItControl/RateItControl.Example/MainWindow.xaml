<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RateItControl.Example"
        xmlns:sdl="http://schemas.sdl.com/xaml"
        xmlns:viewModel="clr-namespace:RateItControl.Example.ViewModel"
        x:Class="RateItControl.Example.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500" d:DataContext="{d:DesignData viewModel:RateItControlViewModel}">
	<Grid>
		<Border HorizontalAlignment="Center" VerticalAlignment="Center"
 		         BorderThickness="1" BorderBrush="Black" Padding="10">
			<sdl:RateItControl 
				MaxRating="{Binding MaxRating}"
				Rating="{Binding Rating}"
				Height="50" Width="400"/>
		</Border>
	</Grid>
</Window>
