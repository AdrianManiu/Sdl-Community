<Window x:Class="Sdl.Community.DtSearch4Studio.Provider.Ui.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 WindowStartupLocation="CenterScreen"  ResizeMode="NoResize"			 
			 Title="SDL DtSearch4Studio Translation provider"
             mc:Ignorable="d"
			 Height="250" Width="565">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/ButtonResources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBoxResources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBlockResources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/GroupboxResources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/DataGridResources.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="80" />
			<RowDefinition Height="30"/>
			<RowDefinition Height="50"/>
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<DockPanel Grid.Row="0" Grid.Column="0">
			<TextBlock Style="{DynamicResource Sdl.TextBlock.TitleStyle}" FontWeight="Bold" Margin="6,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="Welcome to the DtSearch4Studio Translation Provider."></TextBlock>
			<Image Source="../Resources/dtSearch_logo.png" Width="150" Height="50" Margin="11,0,0,0" HorizontalAlignment="Right" />
		</DockPanel>
	    <TextBlock Margin="8,0,0,0" Grid.Row="1" Grid.Column="0" Style="{DynamicResource Sdl.TextBlock.InformationTitleStyle}" FontWeight="Normal" FontSize="13" Text="SDL DtSearch4Studio represents an integration of the dtSearch engine with Studio"></TextBlock>

		<DockPanel LastChildFill="True" Grid.Row="2">
			<TextBlock Margin="15,0,0,0" Style="{DynamicResource Sdl.TextBlock.SubtitleStyle}" FontSize="11" Text="Please select index:" Grid.Row="2" Grid.Column="0" Height="20" DockPanel.Dock="Left" VerticalAlignment="Center"></TextBlock>
		<TextBox Height="30" Margin="5,0,0,0" Grid.Row="3" Text="{Binding IndexLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" 
				 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
		<Button Style="{DynamicResource Sdl.Button.SecondaryStyle}" Grid.Row="3"  Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"
				Content="Browse" Width="50" Command="{Binding BrowseCommand}"></Button>
		</DockPanel>
		<Button Grid.Row="3" HorizontalAlignment="Center" Margin="165,20,0,0" Style="{DynamicResource Sdl.Button.PrimaryStyle}" Width="100" Content="OK" Command="{Binding OkCommand}"/>
		<Button Grid.Row="3" Margin="0,20,0,0"  HorizontalAlignment="Right" Style="{DynamicResource Sdl.Button.SecondaryStyle }" Content="Cancel" Width="100" IsCancel="True" />
	</Grid>
</Window>