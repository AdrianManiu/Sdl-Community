<Window x:Class="GoogleTranslatorProvider.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:root="clr-namespace:GoogleTranslatorProvider"
        xmlns:views="clr-namespace:GoogleTranslatorProvider.Views"
		xmlns:styles="clr-namespace:GoogleTranslatorProvider.Styles"
		xmlns:viewModels="clr-namespace:GoogleTranslatorProvider.ViewModels"
        xmlns:behaviours="clr-namespace:GoogleTranslatorProvider.Behaviours"
		xmlns:converters="clr-namespace:GoogleTranslatorProvider.Converters"
		mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
		WindowStartupLocation="CenterScreen"
		Icon="../Resources/appicon.ico"
		Title="Google TP"
		ResizeMode="NoResize"
		WindowStyle="None"
		Height="700" Width="600"
        d:DesignHeight="700" d:DesignWidth="800">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Styles/Buttons.xaml"/>
				<ResourceDictionary Source="../Styles/WindowsBorder.xaml" />
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/ButtonResources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBlockResources.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<converters:EmptyToVisibility x:Key="EmptyToVisibilityConverter"/>
			<converters:InvertableBoolEnabledConverter x:Key="InvertableBoolEnabledConverter"/>
			<converters:InvertableBooleanToVisibilityConverter x:Key="InvertableBooleanToVisibilityConverter"/>

			<DataTemplate DataType="{x:Type viewModels:ProviderViewModel}">
				<views:ProviderView/>
			</DataTemplate>

			<DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
				<views:SettingsView/>
			</DataTemplate>

			<Style TargetType="Image">
				<Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
			</Style>
		</ResourceDictionary>
	</Window.Resources>

	<Border Style="{StaticResource WindowControlBorderStyle}">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<!--<Top bar>-->
			<styles:WindowsControl Grid.Row="0"/>
			<!--</Top bar>-->

			<!--<API Version Selector>-->
			<ContentControl Grid.Row="1"
							Content="{Binding SelectedView.ViewModel}"
							Margin="0"/>
			<!--</API Version Selector>-->

			<!--<Error log & html>-->
			<StackPanel Grid.Row="2" Margin="24 0 24 0">
				<TextBlock Text="{Binding ErrorMessage}"
						   Visibility="{Binding ErrorMessage,Converter={StaticResource EmptyToVisibilityConverter}}"
						   Style="{StaticResource Sdl.TextBlock.ErrorTitleStyle}"
						   FontSize="12"/>
				<WebBrowser behaviours:WebBrowserContentSource.Html ="{Binding TranslatorErrorResponse,UpdateSourceTrigger=PropertyChanged}"
							Visibility="{Binding TranslatorErrorResponse,Converter={StaticResource EmptyToVisibilityConverter}}"
							Height="60"
							Margin="5"/>
			</StackPanel>
			<!--<Error log & html>-->

			<!--<Footer>-->
			<DockPanel Grid.Row="3"
					   Margin="24 0 24 20">
				<Button Content="{x:Static root:PluginResources.MainView_HelpButton}"
						Style="{StaticResource Sdl.Button.SecondaryStyle}"
						Command="{Binding NavigateToCommand}"
						Cursor="Hand"
						Width="80">
				</Button>

				<StackPanel HorizontalAlignment="Right"
							Orientation="Horizontal">
					<Button Content="{Binding MultiButtonContent}"
							Style="{StaticResource Sdl.Button.SecondaryStyle}"
							Command="{Binding SwitchViewCommand}"
							Visibility="{Binding IsTellMeAction, Converter={StaticResource InvertableBooleanToVisibilityConverter}, ConverterParameter=Inverted}"
							Cursor="Hand"
							Width="80"/>

					<Button Content="{x:Static root:PluginResources.MainView_ConfirmButton}"
							Style="{StaticResource Sdl.Button.PrimaryStyle}"
							Command="{Binding SaveCommand}"
							IsDefault="True"
							Cursor="Hand"
							Width="160"
							Margin="8 0 0 0"/>
				</StackPanel>
			</DockPanel>
			<!--</Footer>-->
		</Grid>
	</Border>
</Window>