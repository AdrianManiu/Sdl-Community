<UserControl x:Class="GoogleTranslatorProvider.Views.ProviderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:root="clr-namespace:GoogleTranslatorProvider"
             xmlns:views="clr-namespace:GoogleTranslatorProvider.Views"
             xmlns:helpers="clr-namespace:GoogleTranslatorProvider.Helpers"
             xmlns:uiHelpers="clr-namespace:GoogleTranslatorProvider.UiHelpers"
			 xmlns:behaviours="clr-namespace:GoogleTranslatorProvider.Behaviours"
             xmlns:viewModels="clr-namespace:GoogleTranslatorProvider.ViewModels"
             xmlns:converters="clr-namespace:GoogleTranslatorProvider.Converters"
             xmlns:controls="clr-namespace:Sdl.Desktop.Platform.Controls.Controls;assembly=Sdl.Desktop.Platform.Controls"
             d:DataContext="{d:DesignInstance viewModels:ProviderViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="850"
			 d:DesignWidth="800">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Styles/Buttons.xaml"/>
				<ResourceDictionary Source="../Styles/GroupBox.xaml" />
				<ResourceDictionary Source="../UiHelpers/WatermarkTextBoxResources.xaml" />
				<ResourceDictionary Source="../UiHelpers/WatermarkPasswordBoxResources.xaml" />
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/ButtonResources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/comboboxresources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/Checkboxresources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBlockResources.xaml"/>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/BindablePasswordBoxStyle.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<converters:InvertableBoolEnabledConverter x:Key="InvertableBoolEnabledConverter"/>
			<converters:InvertableBooleanToVisibilityConverter x:Key="InvertableBooleanToVisibilityConverter"/>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<GroupBox Header=" Google API Version "
				  Style="{StaticResource DefaultGroupBox}"
				  MinHeight="430"
				  Grid.Row="1"
				  Padding="10"
				  Margin="24 24 24 0">
			<StackPanel>
				<!--<API VERSION SELECTOR>-->
				<ComboBox ItemsSource="{Binding GoogleApiVersions}"
						  SelectedItem="{Binding SelectedGoogleApiVersion}"
						  Style="{StaticResource Sdl.ComboBox.Generic.Style}"
						  DisplayMemberPath="Name"
						  HorizontalAlignment="Stretch"
						  VerticalAlignment="Stretch"
						  Cursor="Hand"
						  Width="Auto"/>
				<!--</API VERSION SELECTOR>-->

				<!--<GOOGLE API V2>-->
				<StackPanel Visibility="{Binding IsV2Checked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
							Margin="16 24 16 0">
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{x:Static root:PluginResources.ProviderView_V2_ApiKey_Description}"
								   Style="{StaticResource Sdl.TextBlock.InformationTextStyle}"
								   HorizontalAlignment="Left"
								   Margin="0 0 4 0"/>
						<Image Source="../Resources/Information.png"
							   Width="15">
							<Image.ToolTip>
								<ToolTip>
									<TextBlock Text="{x:Static root:PluginResources.ProviderView_V2_ApiKey_Tooltip}"/>
								</ToolTip>
							</Image.ToolTip>
						</Image>
					</StackPanel>
					<controls:BindablePasswordBox Password="{Binding ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
												  Style="{DynamicResource Sdl.BindablePasswordBox.GenericStyle}"
												  HorizontalAlignment="Left"
												  Width="320"
												  Margin="0 4"/>
					<CheckBox Content="{x:Static root:PluginResources.ProviderView_V2_RememberKey}"
							  IsChecked="{Binding PersistGoogleKey}"
							  Style="{StaticResource Sdl.Checkbox.GenericStyle}"
							  Cursor="Hand"
							  Margin="0"/>
				</StackPanel>
				<!--</GOOGLE API V2>-->

				<!--<GOOGLE API V3>-->
				<StackPanel Visibility="{Binding IsV3Checked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
							Margin="0 16 0 0">

					<!--<DRAG AND DROP-->
					<Border Background="White"
							AllowDrop="True"
							behaviours:DragDropBehaviour.DragDrop="{Binding DragDropCommand}"
							BorderBrush="LightGray"
							BorderThickness="1"
							CornerRadius="8"
							Margin="16 0">
						<StackPanel HorizontalAlignment="Center"
									Margin="0 8">
							<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_File_DragAndDrop}"
									   Style="{StaticResource Sdl.TextBlock.GenericTitleTextStyle}"
									   HorizontalAlignment="Center"
									   Margin="0"/>
							<Button Content="{x:Static root:PluginResources.ProviderView_V3_File_Browse}"
									HorizontalAlignment="Center"
									Command="{Binding BrowseJsonFileCommand}"
									Style="{StaticResource TransparentButtonStyle}"
									AllowDrop="True"
									Margin="0"
									Cursor="Hand"/>
						</StackPanel>
					</Border>
					<!--</DRAG AND DROP-->

					<StackPanel Margin="16 8 16 0">
						<!--<PROJECT PATH>-->
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_LocalPath_Description}"
								   Style="{StaticResource Sdl.TextBlock.InformationTextStyle}"
								   HorizontalAlignment="Left"
									   Margin="0 0 4 0"/>
							<Image Source="../Resources/Information.png"
								   Width="15">
								<Image.ToolTip>
									<ToolTip>
										<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_LocalPath_Tooltip}"/>
									</ToolTip>
								</Image.ToolTip>
							</Image>
						</StackPanel>
						
						<TextBox Text="{Binding VisibleJsonPath}"
								 Style="{StaticResource Sdl.ComboBox.Generic.EditableTextBox}"
								 HorizontalAlignment="Stretch"
								 Padding="8 3 8 2"
								 Height="24"
								 IsReadOnly="True"
								 Margin="0 0 0 8"/>
						<!--</PROJECT PATH>-->

						<!--<PROJECT ID>-->
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_ProjectID_Description}"
									   Style="{StaticResource Sdl.TextBlock.InformationTextStyle}"
									   HorizontalAlignment="Left"
									   Margin="0 0 4 0"/>
							<Image Source="../Resources/Information.png"
								   Width="15">
								<Image.ToolTip>
									<ToolTip>
										<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_ProjectID_Tooltip}"/>
									</ToolTip>
								</Image.ToolTip>
							</Image>
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<TextBox Text="{Binding ProjectId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
									 HorizontalAlignment="Stretch"
									 VerticalContentAlignment="Center"
									 Padding="8 0"
									 Width="320" Height="24"
									 Margin="0 2 8 0"/>
							<Image Source="../Resources/warning.png"
								   Visibility="{Binding ProjectIdIsCorrupt, Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
								   Height="26"
								   Margin="0 2 0 0">
								<Image.ToolTip>
									<ToolTip>
										<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_ProjectID_Warning}"/>
									</ToolTip>
								</Image.ToolTip>
							</Image>
						</StackPanel>
						<!--</PROJECT ID>-->

						<!--<PROJECT LOCATION>-->
						<StackPanel Orientation="Horizontal"
									Margin="0 12 0 0">
							<CheckBox Content="{x:Static root:PluginResources.ProviderView_V3_Location_Description}"
									  HorizontalAlignment="Left"
									  VerticalContentAlignment="Center"
									  Style="{StaticResource Sdl.Checkbox.NoHighlightStyle}"
									  IsChecked="{Binding UseCustomLocation}"
									  Margin="0 0 4 0"/>
							<Image Source="../Resources/Information.png"
								   Width="15">
								<Image.ToolTip>
									<ToolTip>
										<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_Location_Tooltip}"/>
									</ToolTip>
								</Image.ToolTip>
							</Image>
						</StackPanel>

						<ComboBox ItemsSource="{Binding Locations}"
								  SelectedItem="{Binding SelectedLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								  DisplayMemberPath="DisplayName"
								  Visibility="{Binding UseCustomLocation, Converter={StaticResource InvertableBooleanToVisibilityConverter}, ConverterParameter=Inverted}"
								  IsSynchronizedWithCurrentItem="True"
								  SelectedIndex="0"
								  Style="{StaticResource Sdl.ComboBox.Generic.Style}"
								  HorizontalAlignment="Left"
								  MinWidth="0" Width="160" Height="24"
								  Cursor="Hand"
								  Margin="0 2 0 0"/>
						<TextBox Text="{Binding ProjectLocation, UpdateSourceTrigger=PropertyChanged}"
								 Style="{StaticResource WatermarkTextBox}"
								 uiHelpers:TextBoxWatermarkHelper.WatermarkText="{x:Static root:PluginResources.ProviderView_V3_Location_Watermark}"
								 uiHelpers:TextBoxWatermarkHelper.ButtonCommandParameter="{uiHelpers:NameOf Member=ProjectLocation, Type={x:Type viewModels:ProviderViewModel}}"
								 uiHelpers:TextBoxWatermarkHelper.ButtonCommand="{Binding ClearCommand}"
								 Visibility="{Binding UseCustomLocation, Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
								 HorizontalAlignment="Left"
								 Width="320" Height="24"/>
						<!--</PROJECT LOCATION>-->
						
						<!--<CUSTOM MODEL / AutoML>-->
						<StackPanel Orientation="Horizontal"
									Margin="0 12 0 0">
							<CheckBox IsChecked="{Binding UseCustomModel}"
									  VerticalAlignment="Center"
									  VerticalContentAlignment="Center">
								<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_CustomModel_Description}"
										   Style="{StaticResource Sdl.TextBlock.InformationTextStyle}"
										   HorizontalAlignment="Left"
										   Margin="0 0 4 0"/>
							</CheckBox>
							<Image Source="../Resources/Information.png"
								   Width="15">
								<Image.ToolTip>
									<ToolTip>
										<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_CustomModel_Tooltip}"/>
									</ToolTip>
								</Image.ToolTip>
							</Image>
						</StackPanel>
						<TextBox Text="{Binding GoogleEngineModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Style="{StaticResource WatermarkTextBox}"
								 Visibility="{Binding UseCustomModel,Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
								 uiHelpers:TextBoxWatermarkHelper.WatermarkText="{x:Static root:PluginResources.ProviderView_V3_CustomModel_Watermark}"
								 uiHelpers:TextBoxWatermarkHelper.ButtonCommandParameter="{uiHelpers:NameOf Member=GoogleEngineModel, Type={x:Type viewModels:ProviderViewModel}}"
								 uiHelpers:TextBoxWatermarkHelper.ButtonCommand="{Binding ClearCommand}"
								 HorizontalAlignment="Left"
								 Margin="0 4 0 0"
								 Width="320"/>
						<!--</CUSTOM MODEL / AutoML>-->

						<!--<GLOSSARY>-->
						<StackPanel Orientation="Horizontal"
									Margin="0 12 0 0">
							<CheckBox IsChecked="{Binding UseGlossary}"
									  VerticalAlignment="Center"
									  VerticalContentAlignment="Center">
								<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_Glossary_Description}"
										   Style="{StaticResource Sdl.TextBlock.InformationTextStyle}"
										   Margin="0 0 4 0"/>
							</CheckBox>
							<Image Source="../Resources/Information.png"
								   Width="15">
								<Image.ToolTip>
									<ToolTip>
										<TextBlock Text="{x:Static root:PluginResources.ProviderView_V3_Glossary_Tooltip}"/>
									</ToolTip>
								</Image.ToolTip>
							</Image>
						</StackPanel>
						<TextBox Text="{Binding GlossaryPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
								 Style="{StaticResource WatermarkTextBox}"
								 Visibility="{Binding UseGlossary, Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
								 uiHelpers:TextBoxWatermarkHelper.WatermarkText="{x:Static root:PluginResources.ProviderView_V3_Glossary_Watermark}"
								 uiHelpers:TextBoxWatermarkHelper.ButtonCommandParameter="{uiHelpers:NameOf Member=GlossaryPath, Type={x:Type viewModels:ProviderViewModel}}"
								 uiHelpers:TextBoxWatermarkHelper.ButtonCommand="{Binding ClearCommand}"
								 HorizontalAlignment="Left"
								 Width="320"
								 Margin="0 4 0 2"/>
						<CheckBox  Content="{x:Static root:PluginResources.ProviderView_V3_Glossary_UseUnidirectional}"
								   Style="{StaticResource Sdl.Checkbox.GenericStyle}"
								   IsChecked="{Binding BasicCsvGlossary}"
								   Visibility="{Binding UseGlossary, Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
								   HorizontalAlignment="Left"
								   Margin="16 0 0 12"/>
						<!--<GLOSSARY>-->

					</StackPanel>
				</StackPanel>
				<!-- GOOGLE API V3 -->
			</StackPanel>
		</GroupBox>
	</Grid>
</UserControl>