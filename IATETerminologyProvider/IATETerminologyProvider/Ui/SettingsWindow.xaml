<controls:MetroWindow x:Class="IATETerminologyProvider.Ui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
		GlowBrush="#FF1F717C" WindowTitleBrush="#FF1F717C"
        Height="640" Width="800" ResizeMode="NoResize">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="..\UiHelpers\ButtonsStyle.xaml"/>
				<ResourceDictionary Source="..\UiHelpers\TextBlockStyle.xaml"/>
				<ResourceDictionary Source="..\UiHelpers\TextBoxStyle.xaml"/>
				<ResourceDictionary Source="..\UiHelpers\MetroStyle.xaml"/>
				<ResourceDictionary Source="..\UiHelpers/DataGridStyle.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<Border BorderBrush="#FF0B6266" BorderThickness="0.4">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="60"></RowDefinition>
			<RowDefinition Height="300"></RowDefinition>
			<RowDefinition Height="200"></RowDefinition>
			<RowDefinition Height="auto"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="230"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Style="{DynamicResource TextBlockColor}" Margin="10,20,0,20">Please fill following settings:</TextBlock>
		<TextBlock Grid.Row="1" Grid.Column="0" Style="{DynamicResource TextBlockColor}"> Domain:</TextBlock>
		<TextBlock Grid.Row="2" Grid.Column="0" Style="{DynamicResource TextBlockColor}"> Term Type:</TextBlock>

		<DataGrid Style="{DynamicResource AzureDataGrid}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="2 0 0 5" AutoGenerateColumns="False" 
                  ItemsSource="{Binding Domains, Mode=TwoWay,
                  UpdateSourceTrigger=PropertyChanged,NotifyOnSourceUpdated=True,IsAsync=True}"                
                  SelectionMode ="Extended"
                  SelectedValue="{Binding SelectedDomain, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                  HeadersVisibility="All"
                  SelectionUnit="FullRow"
				  AlternationCount="2"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  RowHeaderWidth="0"
                  CanUserAddRows="False" BorderBrush="#FF0B6266">
				<DataGrid.Resources>
					<Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DgcHeaderStyle}" />
				</DataGrid.Resources>
				<DataGrid.RowStyle>
					<Style TargetType="DataGridRow" BasedOn="{StaticResource DgrStyle}"></Style>
				</DataGrid.RowStyle>
				<DataGrid.Columns>			
			<DataGridTemplateColumn  Width="Auto" MinWidth="50">
				<DataGridTemplateColumn.CellTemplate>
					<DataTemplate>
					     <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
					</DataTemplate>
				</DataGridTemplateColumn.CellTemplate>
			</DataGridTemplateColumn>
				<DataGridTextColumn Header="Domain Name" IsReadOnly="True" Width="2*" 
				                    Binding="{Binding Name, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
				</DataGridTextColumn>
			</DataGrid.Columns>
		</DataGrid>

			<DataGrid Style="{DynamicResource AzureDataGrid}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="2 0 0 5" AutoGenerateColumns="False" 
                  ItemsSource="{Binding TermTypes, Mode=TwoWay,
                  UpdateSourceTrigger=PropertyChanged,NotifyOnSourceUpdated=True,IsAsync=True}"                
                  SelectionMode ="Extended"
                  SelectedValue="{Binding SelectedTermType, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                  HeadersVisibility="All"
                  SelectionUnit="FullRow"
				  AlternationCount="2"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  RowHeaderWidth="0"
                  CanUserAddRows="False" BorderBrush="#FF0B6266">
				<DataGrid.Resources>
					<Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DgcHeaderStyle}" />
				</DataGrid.Resources>
				<DataGrid.RowStyle>
					<Style TargetType="DataGridRow" BasedOn="{StaticResource DgrStyle}"></Style>
				</DataGrid.RowStyle>
				<DataGrid.Columns>
					<DataGridTemplateColumn  Width="Auto" MinWidth="50">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTextColumn Header="Term Type" IsReadOnly="True" Width="2*" 
							            Binding="{Binding Name, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
					</DataGridTextColumn>
				</DataGrid.Columns>
		</DataGrid>

			<Button  Grid.Row="3" Grid.Column="1" Style="{DynamicResource LightGreenButtonsStyle }"  
                 Cursor="Hand"
	             Command="{Binding SaveSettingsCommand}" 
                 HorizontalAlignment="Right"
	             FontFamily="Segoe UI" Content="Save Settings" VerticalAlignment="Bottom" Margin="0,5,130,50" Width="120">
		</Button>
			<Button  Grid.Row="3" Grid.Column="1" Style="{DynamicResource LightGreenButtonsStyle }"  
                 Cursor="Hand"
	             Command="{Binding CancelCommand}" 
                 HorizontalAlignment="Right"
	             FontFamily="Segoe UI" Content="Cancel" VerticalAlignment="Bottom" Margin="0,5,10,50" Width="100">
		</Button>
	</Grid>
	</Border>
</controls:MetroWindow>