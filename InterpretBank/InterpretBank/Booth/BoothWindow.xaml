                      Style="{StaticResource Sdl.DataGrid.GenericStyle}">
                <DataGrid.ItemTemplate>
                    <DataTemplate DataType="{x:Type model:EntryModel}" />
                </DataGrid.ItemTemplate>
            </DataGrid>-->

        </Grid>
</Window>
