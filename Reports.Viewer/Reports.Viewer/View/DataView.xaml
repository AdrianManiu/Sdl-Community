<UserControl x:Class="Sdl.Community.Reports.Viewer.View.DataView"             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:viewModel="clr-namespace:Sdl.Community.Reports.Viewer.ViewModel"
             xmlns:controls="clr-namespace:Sdl.Community.Reports.Viewer.Controls"
             xmlns:model="clr-namespace:Sdl.Community.Reports.Viewer.Model"
             xmlns:converters="clr-namespace:Sdl.Community.Reports.Viewer.Converters"
             mc:Ignorable="d" 			 
             d:DesignHeight="150" d:DesignWidth="650" d:DataContext="{d:DesignInstance viewModel:DataViewModel}">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/General.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/WindowsBorder.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/ExpanderStyle.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/TextBlockProjectInfoToolTipStyle.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/TreeView.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/Buttons.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/ButtonsStyle.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/TextBoxStyle.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/WindowsBorder.xaml" />
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/DataGridColumnStyle.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/TextBlockStyle.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Sdl.Community.Reports.Viewer;component/Styles/DataGridStyle.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<converters:CultureInfoNameToImageConverter x:Key="CultureInfoNameToImageConverter"/>
			<converters:CultureInfoNameToDisplayNameConverter x:Key="CultureInfoNameToDisplayNameConverter"/>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<controls:SortAwareDataGrid Grid.Row="0"
		              DefaultColumnName="Name"
		              DefaultSortDirection="Ascending"
		              Style="{StaticResource CustomGridStyle}"
			          Margin="0" 			                           
					  ItemsSource="{Binding Reports, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"                
					  SelectedItem="{Binding SelectedReports, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
		              SelectedItems="{Binding SelectedReports, Mode=OneWayToSource}"
					  FontSize="12"
					  BorderBrush="#C1C0C0"
					  FontFamily="Segoe UI"
		              SelectionMode="Extended"
		              SelectionUnit="FullRow"	
					  GridLinesVisibility="Horizontal"
					  VerticalScrollBarVisibility="Auto"
					  HorizontalScrollBarVisibility="Disabled"
					  CanUserDeleteRows="False">
			<DataGrid.Columns>

				<DataGridTemplateColumn Header="Name" CanUserSort="True" IsReadOnly="True" SortMemberPath="Name" Width="2*" >
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate DataType="model:Report">
							<Grid Margin="5,0,10,0">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>

								<Image Grid.Column="0" Margin="2,0,0,2" 
								       VerticalAlignment="Center" 
								       Stretch="UniformToFill"
								       Width="18" 
									   Source="../Resources/Report.png"
								       RenderOptions.BitmapScalingMode="HighQuality" 
								       RenderOptions.EdgeMode="Aliased">
								</Image>

								<TextBlock Grid.Column="1" VerticalAlignment="Center" Padding="4,0,2,0"  
								           Text="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>

							</Grid>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>


				<DataGridTextColumn Header="Group" CanUserSort="True"
				                    Binding="{Binding Group, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"
				                    ElementStyle="{StaticResource TextBlockStyle}" Width="1*"/>

				<DataGridTextColumn Header="Description" CanUserSort="True" 
				                    Binding="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"
				                    ElementStyle="{StaticResource TextBlockStyle}" Width="1*"/>

				<DataGridTemplateColumn Header="Name" CanUserSort="True" IsReadOnly="True" SortMemberPath="Name" Width="1*" >
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate DataType="model:Report">
							<Grid Margin="5,0,10,0">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>

								<Image 
									Stretch="UniformToFill"
									RenderOptions.BitmapScalingMode="HighQuality" 
									RenderOptions.EdgeMode="Aliased"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Source="{Binding Path=Language, Converter={StaticResource CultureInfoNameToImageConverter}, ConverterParameter='Source'}">
									<Image.Style>
										<Style TargetType="Image">
											<Setter Property="Width" Value="22"/>
											<Setter Property="Margin" Value="0,0,2,0"/>
											<Style.Triggers>
												<DataTrigger Binding="{Binding Language}" Value="">
													<Setter Property="Width" Value="0"/>
													<Setter Property="Margin" Value="0"/>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</Image.Style>
								</Image>

								<TextBlock Grid.Column="1" VerticalAlignment="Center" Padding="4,0,2,0"  
								           Text="{Binding Path=Language, Converter={StaticResource CultureInfoNameToDisplayNameConverter}, ConverterParameter='Source'}"/>

							</Grid>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTextColumn Header="Date" CanUserSort="True" 
				                    Binding="{Binding DateToString, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"
										ElementStyle="{StaticResource TextBlockStyle}" Width="1*"/>

				<DataGridTemplateColumn Header="Path" Width="2*" CanUserSort="True">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate DataType="model:Report">
							<controls:TextBoxWithEllipsis Margin="2,0,4,0" IsReadOnly="True" Background="Transparent"
							                              BorderThickness="0" BorderBrush="Transparent"
							                              EllipsisPlacement="Left"
							                              IsEllipsisEnabled="True"							           
							                              LongText="{Binding Path, UpdateSourceTrigger=PropertyChanged}" 							           
							                              TextWrapping="NoWrap" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

			</DataGrid.Columns>


		</controls:SortAwareDataGrid>
		<Grid Grid.Row="1" Margin="2,0,2,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Command="{Binding ClearSelectionCommand}" HorizontalAlignment="Left" Style="{StaticResource LinkButton}" Content="Clear selection" Margin="4,2,4,2"/>
			<Label Grid.Column="1" Foreground="#4E4D4D" Content="{Binding StatusLabel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>

		</Grid>
	</Grid>
</UserControl>
