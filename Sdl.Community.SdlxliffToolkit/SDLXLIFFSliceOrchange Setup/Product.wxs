<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" Name="SDLXLIFF Toolkit" Language="1033" Version="1.1.37" Manufacturer="SDL" UpgradeCode="a646b3ca-6391-40d8-89e3-fdcd6b976794">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" Description="SDLXLIFF Toolkit" InstallPrivileges="elevated" Manufacturer="SDL" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate EmbedCab="yes" />

		<Feature Id="ProductFeature" Title="SDLXLIFF Toolkit" Level="1">
      <ComponentGroupRef Id="C_CommonAssemblies" />
      <ComponentGroupRef Id="DesktopShortcut" />

    </Feature>
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <UIRef Id="WixUI_InstallDir" />
	</Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="DesktopFolder" Name="Desktop">
        <Component Id="ApplicationShortcutDesktop" Guid="*">
          <Shortcut Id="ApplicationDesktopShortcut"
              Name="SDLXLIFF Toolkit"
              Description="SDLXLIFF Toolkit"
              Target="[INSTALLFOLDER]SDLXLIFF toolkit.exe"
              WorkingDirectory="INSTALLFOLDER"/>
          <RemoveFolder Id="DesktopFolder" On="uninstall"/>
          <RegistryValue
              Root="HKCU"
              Key="Software/SDLXLIFFToolkit"
              Name="installed"
              Type="integer"
              Value="1"
              KeyPath="yes"/>
        </Component>
      </Directory>
      <Directory Id="ProgramFilesFolder">
        <Directory Id="SdlFolder" Name="SDL">
          <Directory Id="SdlCommunity" Name="OpenExchange Apps">
            <Directory Id="INSTALLFOLDER" Name="SDLXLIFF Toolkit" />
          </Directory>
        </Directory>
      </Directory>
    </Directory>
    <ComponentGroup Id="DesktopShortcut">
      <ComponentRef Id="ApplicationShortcutDesktop" />
    </ComponentGroup>
  </Fragment>


</Wix>