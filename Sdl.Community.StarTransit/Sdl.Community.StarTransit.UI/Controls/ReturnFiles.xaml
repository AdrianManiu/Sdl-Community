<UserControl x:Class="Sdl.Community.StarTransit.UI.Controls.ReturnFiles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sdl.Community.StarTransit.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            
        </Grid.ColumnDefinitions>
        <TextBlock  Text="{Binding Title}" FontSize="20" Foreground="#41B1E1" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="DemiBold"/>
        <ListView  Grid.Row="1"  x:Name="ListView"
                  Margin="0"
                  Background="white"
                  BorderBrush="{x:Null}"
                   BorderThickness="0"
                   SelectionMode="Multiple"
                   ItemsSource="{Binding ProjectFiles}">
            <ListView.ItemTemplate>
                <ItemContainerTemplate>
                    <TextBlock Text="{Binding Name }" FontSize="14" Margin="10,10,10,10" />
                </ItemContainerTemplate>

            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
