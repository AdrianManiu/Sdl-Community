<UserControl x:Class="Sdl.Community.TmAnonymizer.Ui.Translations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sdl.Community.TmAnonymizer.Ui"
             xmlns:helpers="clr-namespace:Sdl.Community.TmAnonymizer.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="..\UiHelpers\DataGridStyle.xaml"/>
				<ResourceDictionary Source="..\UiHelpers\ButtonsStyle.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Row="0" Grid.Column="0" Margin="15,5,0,5">Please rules you want to apply</TextBlock>
		<CheckBox  Grid.Row="1" Grid.Column="0" FontFamily="Segoe UI" Margin="5,5,0,0" IsChecked="{Binding SelectAll}" Command="{Binding SelectAllCommand}">Select all</CheckBox>
		<DataGrid Grid.Row="2" Grid.Column="0" Style="{DynamicResource DgHeaderStyle}" 
		          FontFamily="Segoe UI"
		          BorderThickness="0" VerticalScrollBarVisibility="Auto"
		          ItemsSource="{Binding RulesCollection, Mode=TwoWay}"  Background="White" 
		          AutoGenerateColumns="False" GridLinesVisibility="None" CanUserAddRows="True"
		          Margin="5,10" >
			<DataGrid.RowStyle>
				<Style TargetType="DataGridRow">
					<Setter Property="ToolTip">
						<Setter.Value>
							<TextBlock  TextWrapping="Wrap" Text="{Binding Description}"/>
						</Setter.Value>
					</Setter>
				</Style>
			</DataGrid.RowStyle>
			<DataGrid.Columns>
				<DataGridCheckBoxColumn Width="80" CellStyle="{DynamicResource DataGridContentCellCentering}" Header = "Select" Binding = "{Binding IsSelected,UpdateSourceTrigger=PropertyChanged}" />
				<DataGridTextColumn Width="100" Header="Name" Binding="{Binding Name}" />
				<DataGridTextColumn Width="200" Header="Description" Binding="{Binding Description}" />
			</DataGrid.Columns>
		</DataGrid>
		<StackPanel Grid.Column="0" Grid.Row="3"  Orientation="Vertical">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,10,10">
				<Button  Style="{DynamicResource LightGreenButtonsStyle}" Width="125" Margin="5,0,10,0" Content="Apply changes" Command="{Binding ApplyCommand}"></Button>
				<Button  Style="{DynamicResource StudioGreenButtonsStyle }" Width="125" Content="Preview changes" Command="{Binding PreviewCommand}"></Button>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
