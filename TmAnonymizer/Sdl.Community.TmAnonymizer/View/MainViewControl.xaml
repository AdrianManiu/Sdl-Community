<UserControl x:Class="Sdl.Community.SdlTmAnonymizer.View.MainViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Sdl.Community.SdlTmAnonymizer.ViewModel"
             xmlns:view="clr-namespace:Sdl.Community.SdlTmAnonymizer.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600" d:DataContext="{d:DesignData MainViewModel}">
	<UserControl.Resources>
		<DataTemplate DataType="{x:Type viewModels:TranslationMemoryViewModel}">
			<view:TranslationMemory/>
		</DataTemplate>
	</UserControl.Resources>

	<Grid Name="ParentGrid">
		<TabControl Margin="5,20,0,0">
			<TabItem Header="Translations">
				<view:Translations DataContext="{Binding TranslationViewModel}" HorizontalAlignment="Stretch" Height="Auto" Width="Auto"/>
			</TabItem>
			<TabItem  Header ="System Fields">
				<view:SystemFields DataContext="{Binding SystemFieldsViewModel}" HorizontalAlignment="Stretch" Height="Auto" Width="Auto"/>
			</TabItem>
			<TabItem Header="Custom Fields">
				<view:CustomFields DataContext="{Binding CustomFieldsViewModel}" HorizontalAlignment="Stretch" Height="Auto" Width="Auto"/>
			</TabItem>

		</TabControl>
	</Grid>

</UserControl>

