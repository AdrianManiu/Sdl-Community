<Window x:Class="Sdl.Community.TuToTm.View.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sdl.Community.TuToTm.View"
             xmlns:viewModel="clr-namespace:Sdl.Community.TuToTm.ViewModel"
             xmlns:uiHelpers="clr-namespace:Sdl.Community.TuToTm.UiHelpers"
			 WindowStartupLocation="CenterScreen"
			 WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
             mc:Ignorable="d" 
			 Title="TU to TM"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel}">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../UiHelpers/Buttons.xaml" />
				<ResourceDictionary Source="../UiHelpers/WindowsBorder.xaml" />
				<ResourceDictionary Source="../UiHelpers/General.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<Border Style="{StaticResource WindowControlBorderStyle}" >
		<Grid Margin="1,0,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="35" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<!-- WIZARD BORDER CONTROL -->
			<uiHelpers:WindowsControl  Grid.Column="0" Grid.Row="0" DockPanel.Dock="Top" />

			<!-- CURRENT PAGE AREA -->
			<Border Background="White" Grid.Column="0" Grid.Row="1">
				<TextBlock>andrea</TextBlock>
			</Border>

		</Grid>
	</Border>
</Window>
